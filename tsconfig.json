{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "ES2019.String"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}